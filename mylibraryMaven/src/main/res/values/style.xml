<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="nsdlLargeTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="customTypeface">latoBlack</item>
        <item name="android:textSize">@dimen/nsdl_text_title_large</item>
        <item name="android:textColor">@color/nsdl_textview_colorBc</item>
    </style>

    <style name="MyLibTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FAFAFA</item>
        <item name="colorPrimaryDark">#FAFAFA</item>
        <item name="colorAccent">#D3D3D3</item>

        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorControlHighlight">@color/white</item>

    </style>

    <style name="TilStyle" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/nsdl_edit_text_hint_colorBc</item>
    </style>

    <style name="nsdlEditTextBc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingBottom">@dimen/nsdl_edit_text_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/nsdl_edit_text_padding_left</item>
        <item name="paddingStart">@dimen/nsdl_edit_text_padding_left</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/nsdl_edit_text_size</item>
        <item name="android:textColor">@color/nsdl_edit_text_colorBc</item>
        <item name="android:textColorHint">@color/nsdl_edit_text_hint_colorBc</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="bullet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">\u2022</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bulletText" parent="bullet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">start</item>
    </style>

